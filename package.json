{
  "name": "quizbug",
  "version": "1.0.0",
  "description": "A tool to automatically flashcard Quinterest questions while reading them to you",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "node-sass --include-path scss --output-style compressed scss/quizbug.scss css/quizbug.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "minify-js": "uglifyjs js/quizbug.js --compress --mangle -o js/quizbug.min.js",
    "build-js": "browserify js/quizbug-react.js -o bundle/bundle.js -t [ babelify --presets [ es2015 react ] ]",
    "watch-js": "nodemon -e js -w js -x \"npm run build-js\""
  },
  "author": "QuidNovum",
  "license": "ISC",
  "dependencies": {
    "express": "^4.13.3",
    "react": "^15.2.0",
    "react-addons-css-transition-group": "^15.2.0",
    "react-dom": "^15.2.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "node-browserify": "^1.0.0",
    "node-sass": "^3.4.1",
    "nodemon": "^1.8.1"
  }
}
